{
	"private": true,
	"name": "psilly-site",
	"homepage": "https://psilly.com/",
	"version": "1.0.0",
	"license": "GPL-3.0",
	"scripts": {
		"start": "wmr",
		"build": "wmr build --prerender",
		"postbuild": "./make-sitemap.mjs",
		"lint": "eslint 'public/**/*.{js,jsx,ts,tsx,mjs}'",
		"test": "jest",
		"clean": "rm -rf build coverage",
		"dev": "yarn test --watch",
		"serve": "wmr serve",
		"predeploy": "yarn clean && yarn lint && yarn test --watchAll=false --coverage && yarn build --prerender && yarn postbuild && cp CNAME ./dist/",
		"deploy": "gh-pages -d dist"
	},
	"eslintConfig": {
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking"
		],
		"rules": {
			"semi": [
				2,
				"never"
			],
			"indent": [
				"error",
				2
			]
		}
	},
	"dependencies": {
		"buffer": "^6.0.3",
		"hoofd": "^1.7.1",
		"preact": "^10.19.3",
		"preact-iso": "^2.3.2",
		"use-hash-state": "^2.0.1"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.18",
		"@types/jest": "^29.5.11",
		"@types/react": "^18.2.47",
		"@types/react-helmet": "^6.1.11",
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.18.1",
		"entities": "^4.5.0",
		"enzyme": "^3.11.0",
		"eslint": "^8.56.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"gh-pages": "^6.1.1",
		"jest": "^29.7.0",
		"parse5": "^7.1.2",
		"preact-render-to-string": "^6.3.1",
		"prettier": "^3.1.1",
		"react": "^18.2.0",
		"react-helmet": "^6.1.0",
		"rollup": "^4.9.5",
		"ts-jest": "^29.1.1",
		"ts-jest-resolver": "^2.0.1",
		"typescript": "^5.3.3",
		"wmr": "^3.8.0"
	},
	"packageManager": "yarn@3.2.3"
}
