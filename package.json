{
  "private": true,
  "name": "psilly",
  "homepage": "https://psilly.com/",
  "version": "0.0.42",
  "license": "MIT",
  "scripts": {
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx,mjs}' 'tests/**/*.{js,jsx,ts,tsx,mjs}'",
    "test": "jest ./tests",
    "clean": "rm -rf build coverage",
    "build": "preact build",
    "postbuild": "node ./src/generate-sitemap.mjs",
    "serve": "sirv build --port 8080 --cors --single",
    "predeploy": "yarn clean && yarn lint && yarn test --watchAll=false --coverage && yarn build",
    "deploy": "gh-pages -d build"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ],
      "extraFileExtensions": [
        ".mjs"
      ]
    },
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "indent": [
        "error",
        2
      ]
    },
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "core-js": "*",
    "jrid": "*",
    "postcss": "<8",
    "preact": "*",
    "preact-helmet": "4.0.0-alpha-3",
    "preact-html-converter": "*",
    "preact-render-to-string": "*",
    "preact-router": "*",
    "regenerator-runtime": "*",
    "use-hash-state": "*"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/eslint-parser": "*",
    "@types/dompurify": "*",
    "@types/enzyme": "*",
    "@types/jest": "*",
    "@types/react-helmet": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "critters": "*",
    "enzyme": "*",
    "enzyme-adapter-preact-pure": "*",
    "eslint": "<8",
    "eslint-config-preact": "*",
    "gh-pages": "*",
    "globby": "*",
    "jest": "*",
    "jest-preset-preact": "*",
    "parse5": "*",
    "preact-cli": "*",
    "prettier": "*",
    "sirv-cli": "*",
    "typescript": "*"
  },
  "peerDependencies": {
    "parse5": "*"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/sw.js"
    ],
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat",
      "^react/jsx-runtime$": "preact/jsx-runtime"
    }
  }
}
